<Window x:Class="zrobts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NoTrace - Build ZeroBytes"
        Height="500" Width="850"
        Icon="Assets/logo_zero_bytes.ico"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F8"
        FontFamily="pack://application:,,,/Fonts/#JetBrains Mono">

    <Window.Resources>
        <!-- Botões -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#JetBrains Mono"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#B0BEC5"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#B0BEC5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#JetBrains Mono"/>
        </Style>

        <!-- TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#263238"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#JetBrains Mono"/>
        </Style>
    </Window.Resources>

    <Border Margin="20" Background="White" CornerRadius="12" Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="NoTrace" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#1A237E"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Remova arquivos de forma segura e irreversível."
                           FontWeight="SemiBold"
                           Foreground="#546E7A"/>

                <!-- ComboBox para selecionar drive -->
                <ComboBox Name="DriveLetterBox" 
                          Width="200" 
                          Margin="0,20,0,20"
                          FontSize="15"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Selecione o disco" IsEnabled="False"/>
                    <ComboBoxItem Content="C:/" />
                    <ComboBoxItem Content="D:/" />
                    <ComboBoxItem Content="E:/" />
                </ComboBox>

                <!-- Botões -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                    <StackPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Margin" Value="0,0,10,0"/>
                        </Style>
                    </StackPanel.Resources>

                    <Button Name="StartButton"
                            Width="180"
                            Height="40"
                            Content="Iniciar Limpeza"
                            FontSize="15"
                            Click="StartButton_Click" />

                    <Button Content="Como funciona?"
                            Width="160"
                            Height="40"
                            Background="#455A64"
                            FontSize="13"
                            Click="LearnMore_Click" />
                </StackPanel>
            </StackPanel>

            <!-- Barra de progresso -->
            <ProgressBar Grid.Row="1"
                         Name="ProgressBar"
                         Height="5"
                         Margin="0,0,0,20"
                         IsIndeterminate="True"
                         Visibility="Collapsed"
                         Background="#ECEFF1"/>

            <!-- Log -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Log de Execução"
                           FontWeight="Bold"
                           Margin="0,0,0,10"
                           Foreground="#37474F"/>

                <Border Grid.Row="1"
                        BorderThickness="1"
                        BorderBrush="#CFD8DC"
                        CornerRadius="6">
                    <TextBox Name="OutputBox"
                             VerticalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             Padding="10"
                             Background="#FAFAFA"
                             FontFamily="Consolas"
                             FontSize="12"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
